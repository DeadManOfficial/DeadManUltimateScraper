# DeadMan Ultimate Scraper - API Server Environment Variables
# Copy this file to .env and configure for your environment
#
# SECURITY: Change all default passwords before production deployment!

# ============================================
# Auth0 Configuration (REQUIRED for production)
# ============================================
AUTH0_AUDIENCE=https://officialdeadman.us.auth0.com/api/v2/
AUTH0_ISSUER=https://officialdeadman.us.auth0.com/

# Set to 'true' to disable auth in development
AUTH0_DISABLED=false

# ============================================
# Server Configuration
# ============================================
PORT=8080
NODE_ENV=development

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# ============================================
# Elasticsearch Configuration
# ============================================
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_INDEX=deadman_scrapes

# X-Pack Security Credentials
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=changeme

# ============================================
# MongoDB Configuration
# ============================================
# For Docker: mongodb://user:pass@mongodb:27017/db?authSource=admin
# For Local: mongodb://localhost:27017/deadman_scraper
MONGODB_URI=mongodb://deadman:changeme@localhost:27017/deadman_scraper?authSource=admin

# Root credentials (used by docker-compose)
MONGO_ROOT_USER=deadman
MONGO_ROOT_PASSWORD=changeme

# ============================================
# Redis Configuration
# ============================================
# For Docker with auth: redis://:password@redis:6379
# For Local: redis://localhost:6379
REDIS_URL=redis://:changeme@localhost:6379
REDIS_PASSWORD=changeme

# ============================================
# Tor Configuration
# ============================================
TOR_PROXY=socks5h://localhost:9050
TOR_CONTROL_PORT=9051
TOR_CONTROL_PASSWORD=deadman

# Pre-hashed password for Tor control (generated with: tor --hash-password yourpassword)
# Default hash is for password "deadman"
TOR_CONTROL_HASH=16:872860B76453A77D60CA2BB8C1A7042072093276A3D701AD684053EC4C

# ============================================
# Optional: LLM API Keys (for content analysis)
# ============================================
# MISTRAL_API_KEY=
# GROQ_API_KEY=
# CEREBRAS_API_KEY=
