# DeadMan Ultimate Scraper - Docker Compose Environment Variables
# Copy this file to .env and configure before running docker-compose up
#
# SECURITY: Change ALL default passwords before production deployment!
# These defaults are for development only.

# ============================================
# Database Credentials
# ============================================

# Elasticsearch X-Pack Security
ELASTIC_PASSWORD=DeadMan_ES_2024!

# MongoDB Root Credentials
MONGO_ROOT_USER=deadman
MONGO_ROOT_PASSWORD=DeadMan_Mongo_2024!

# Redis Password
REDIS_PASSWORD=DeadMan_Redis_2024!

# ============================================
# Tor Control Port
# ============================================

# Plain text password for Tor control (used by scraper)
TOR_CONTROL_PASSWORD=deadman

# Hashed password for Tor daemon (generate with: tor --hash-password yourpassword)
# This hash is for password "deadman"
TOR_CONTROL_HASH=16:872860B76453A77D60CA2BB8C1A7042072093276A3D701AD684053EC4C

# ============================================
# Auth0 Configuration (optional for dev)
# ============================================

AUTH0_AUDIENCE=https://officialdeadman.us.auth0.com/api/v2/
AUTH0_ISSUER=https://officialdeadman.us.auth0.com/

# Set to 'true' to disable Auth0 in development
AUTH0_DISABLED=true

# ============================================
# CORS Configuration
# ============================================

# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

